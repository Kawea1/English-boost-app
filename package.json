{
  "name": "academic-english-app",
  "productName": "学术英语精进",
  "version": "1.0.0",
  "description": "GRE、托福、学术英语学习应用 - 离线可用",
  "main": "main.js",
  "author": "Academic English Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "pack": "electron-builder --dir",
    "sync": "mkdir -p www && cp index.html styles.css app.js vocabulary.js dictionary.js modules.js listening-module.js listening-data.js reading-data.js sources.js online_sources.js sw.js manifest.json auth.js www/ && npx cap sync",
    "ios:sync": "npm run sync",
    "ios:open": "npx cap open ios",
    "ios:build": "./build-ios.sh",
    "android:sync": "npm run sync",
    "android:open": "npx cap open android",
    "android:build": "cd android && ./gradlew assembleDebug",
    "mobile:sync": "npm run sync",
    "mobile:all": "npm run sync && npx cap open ios && npx cap open android",
    "all": "./build-all.sh"
  },
  "build": {
    "appId": "com.academic.english",
    "productName": "学术英语精进",
    "copyright": "Copyright © 2024 Academic English Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**",
      "!*.md",
      "!*.txt",
      "!scripts/**",
      "!official_inputs/**",
      "!official_parsed/**",
      "!public_parsed/**"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "darkModeSupport": true
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Education",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "学术英语精进"
    },
    "dmg": {
      "title": "学术英语精进",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4"
  }
}
